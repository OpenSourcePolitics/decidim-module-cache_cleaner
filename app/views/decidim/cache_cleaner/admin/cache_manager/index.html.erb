<div class="card" id="translation_sets">
  <div class="card-divider">
    <h2 class="card-title flex--sbc">
      <%= t(".title") %>
    </h2>
  </div>
  <div class="card-section">
    <div class="callout">
      <% if @cache_manager.activated? %>
        <h2><%= t(".cache_activated", cache_store: @cache_manager.cache_store) %></h2>
      <% else %>
        <h2><%= t(".cache_not_activated") %></h2>
      <% end %>
      <p><%= t(".description") %></p>
      <% if @cache_manager.clearable? %>
        <%= link_to t(".clear_cache"), decidim_admin_cache_cleaner.clear_cache_path, method: :post, class: "button tiny button--simple", data: { confirm: t(".confirm_destroy") } %>
      <% else %>
        <p><%= t(".not_clearable") %>></p>
      <% end %>
    </div>
  </div>
</div>